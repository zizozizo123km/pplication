{
  "version": 2,
  "name": "advanced-netflix-clone",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "outputDirectory": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/",
      "status": 200
    }
  ],
  "env": {
    "VITE_TMDB_API_KEY": "@tmdb_api_key",
    "VITE_BASE_URL": "https://api.themoviedb.org/3"
  }
}